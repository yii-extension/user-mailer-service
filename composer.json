{
    "name": "yii-extension/user-mailer-service",
    "type": "library",
    "description": "Mailer service for module user",
    "keywords": [
        "yii3",
        "user",
        "mailer",
        "service"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "yiisoft/html": "^1.0",
        "yiisoft/mailer": "^3.0@dev",
        "yiisoft/mailer-swiftmailer": "^3.0@dev",
        "yiisoft/translator": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.7",
        "vimeo/psalm": "^4.4",
        "yiisoft/yii-event": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Extension\\User\\Service\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Extension\\User\\Service\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "params": "config/params.php",
            "common": [
                "config/common/*.php"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
